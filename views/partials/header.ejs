<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    
    <div id="tools">
        <% if(loggedin) { %>
            <!--Visibles links only when the client is authenticated-->
            <a title="Go to account management" href="/account/">Welcome <%= accountData.account_firstname %></a>
            <a title="Click to log out" href="/account/logout">Logout</a>
        <% } else { %>
            <!--Visible link only when the client is not authenticated-->
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>