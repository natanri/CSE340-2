<div>
    <h1><%- title %></h1>
    <% if(errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><i><%= error.msg %></i></li>            
        <% }) %>
    </ul>
    <% } %>
</div>
<div class="delete-inventory" id="classificationList">
    <form action="/inv/delete" method="post" id="deleteForm">
        <p>Confirm Delation - The delete is permanent.</p>
        <fieldset>                        
    
            <label for="inv_make">Make</label><br>
            <input type="text" id="inv_make" class="field" name="inv_make"required placeholder="Min of 3characters" value="<%= locals.inv_make %>" readonly><br>
    
            <label for="inv_model">Model</label><br>
            <input type="text" id="inv_model" class="field" name="inv_model" required placeholder="Min of 3characters" value="<%= locals.inv_model %>" readonly><br>      
    
            <label for="inv_price">Price</label><br>
            <input type="text" id="inv_price" class="field" name="inv_price" required value="<%= locals.inv_price %>" readonly><br>
    
            <label for="inv_year">Year</label><br>
            <input type="text" id="inv_year" class="field" name="inv_year" required value="<%= locals.inv_year %>" readonly><br>           
    
            <p class="center-content">
                <button type="submit">Delete Vehicle</button><br>
                <input type="hidden" name="inv_id"
                    <% if(locals.inv_id) { %> 
                        value="<%= locals.inv_id %>"
                    <% } %>
                />
            </p> 
            
        </fieldset>
       
    </form>
</div>

